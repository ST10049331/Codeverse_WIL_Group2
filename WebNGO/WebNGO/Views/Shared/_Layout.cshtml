<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SA Outreach and Emergency Services</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SA Outreach and Emergency Services.styles.css" asp-append-version="true" />
    <style>

        /* Set the body background to black */
        body {
            background-color: #000000; /* Black background */
            color: #000000; /* Black text color */
        }

        /* Make navbar transparent and positioned on top of the image */
        /* Make navbar transparent and remove border and shadow */
        .navbar-light {
            background-color: transparent !important; /* Transparent navbar */
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1; /* Ensure it's on top of the image */
            border-bottom: none !important; /* Remove border */
            box-shadow: none !important; /* Remove any shadow */
        }

            /* Ensure the text color of the navbar links is white */
            .navbar-light .nav-link {
                color: #ffffff !important; /* White */
            }

            /* Ensure the color of the navbar brand (logo text) is white */
            .navbar-light .navbar-brand {
                color: #ffffff !important;
            }

        /* Button styling */
        .btn-donate {
            background-color: #DE3831 !important; /* Red */
            color: #ffffff !important; /* White */
        }

            .btn-donate:hover {
                background-color: #FFB81C !important; /* Yellow */
                color: #000000 !important; /* Black */
            }

        /* Footer styling */
        .footer {
            background-color: #000000; /* Black */
            color: #ffffff; /* White */
        }

            .footer a {
                color: #FFB81C; /* Yellow */
            }

                .footer a:hover {
                    color: #ffffff; /* White */
                }

        /* Hero Section Styles */
        .hero-section {
            background-image: url('@Url.Content("~/images/es1.png")'); /* Path to your image */
            background-size: cover; /* Cover the entire div */
            background-position: center center; /* Center the image */
            background-repeat: no-repeat; /* Do not repeat the image */
            height: 100vh; /* Set the height of the section to 100% of the viewport height */
            z-index: 0; /* Behind the navbar */
        }

        .hero-content {
            color: white; /* Ensure text is readable on the background */
            text-align: center;
            padding-top: 20%; /* Push the content down a bit */
            z-index: 1;
        }

        /* Style the modal content */
        .modal-content {
            background-color: #CEF3E4; /* Light grey background */
            color: #000000; /* Dark text color */
        }

            /* Style the form controls */
            .modal-content .form-control {
                background-color: #ffffff; /* White input fields */
                color: #333333; /* Dark text color for input */
                border: 1px solid #ccc; /* Border color */
            }

            /* Style the labels */
            .modal-content .form-label {
                color: #333333; /* Dark text color for labels */
            }

            /* Style the buttons */
            .modal-content .btn-primary {
                background-color: #007bff; /* Custom color for login button */
                border-color: #007bff; /* Custom border color */
            }

                .modal-content .btn-primary:hover {
                    background-color: #0056b3; /* Darker blue for hover state */
                    border-color: #0056b3; /* Darker border for hover */
                }

            .modal-content .btn-success {
                background-color: #28a745; /* Custom color for registration button */
                border-color: #28a745; /* Custom border color */
            }

                .modal-content .btn-success:hover {
                    background-color: #218838; /* Darker green for hover state */
                    border-color: #1e7e34; /* Darker border for hover */
                }
    

        /* Style the modal content */
        .modal-content {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent black background */
            color: #ffffff; /* White text color */
            border-radius: 15px; /* Rounded corners */
            border: 1px solid #ffffff; /* Light white border */
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.5); /* Add shadow for 3D effect */
        }

            /* Style the form controls */
            .modal-content .form-control {
                background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent input fields */
                color: #000000; /* Black text color */
                border-radius: 10px; /* Rounded input fields */
                border: 1px solid #ffffff; /* Light white border */
            }

            /* Style the labels */
            .modal-content .form-label {
                color: #ffffff; /* White text color for labels */
            }

            /* Style the buttons */
            .modal-content .btn-primary {
                background-color: #ffcc00; /* Bright contrasting button color */
                border-color: #ffcc00; /* Matching border color */
                color: #000000; /* Black text color */
                border-radius: 10px; /* Rounded button */
            }

                .modal-content .btn-primary:hover {
                    background-color: #ffc107; /* Darker yellow on hover */
                    border-color: #ffc107; /* Matching hover border */
                }

            .modal-content .btn-success {
                background-color: #28a745; /* Green color for register button */
                border-color: #28a745;
                color: #ffffff;
                border-radius: 10px;
            }

                .modal-content .btn-success:hover {
                    background-color: #218838; /* Darker green on hover */
                    border-color: #1e7e34;
                }

      

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/Images/saout_logo.png")" alt="SA Outreach Logo" width="75" height="70" />
                </a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="AboutUs" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ContactUs" asp-action="Index">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Donate" asp-action="Index">Donate</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Wings</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="FlyingWing" asp-action="Index">The Flying Wings Team</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="MediWing" asp-action="Index">The Mediwings Team</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="LegalWing" asp-action="Index">The Legal Wings Team</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="HelpingHand" asp-action="Index">The Helping Hands Team</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="YouthWing" asp-action="Index">The Youth Wings Team</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Projects">Projects & Programs</a>
                        </li>
                    </ul>
                    <!-- Login/Registration Link -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginRegisterModal">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <h1>Welcome to SA Outreach</h1>
            <p>Helping the community together.</p>
            <a href="~/Home/AboutUs" class="btn btn-primary">Learn More</a>
        </div>
    </div>
  

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container">
            &copy; 2024 - SAOutreach_2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Modal for Login and Registration -->
    <div class="modal fade" id="loginRegisterModal" tabindex="-1" aria-labelledby="loginRegisterModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginRegisterModalLabel">Login / Register</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Tabs for Login and Registration -->
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="login" aria-selected="true">Login</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab" aria-controls="register" aria-selected="false">Register</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <!-- Login Form -->
                        <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
                            <form method="post" action="/Account/Login">
                                <div class="mb-3 mt-3">
                                    <label for="loginEmail" class="form-label">Email:</label>
                                    <input type="email" class="form-control" id="loginEmail" name="email" required>
                                </div>

                                <div class="mb-3">
                                    <label for="loginPassword" class="form-label">Password:</label>
                                    <input type="password" class="form-control" id="loginPassword" name="password" required>
                                    <!-- Forgot Password link directly below Password field -->
                                    <small>
                                        <a id="forgot-password" href="/Account/ForgotPassword">Forgot your password?</a>
                                    </small>
                                </div>

                                <button type="submit" class="btn btn-primary w-100">Login</button>
                            </form>
                        </div>

                        <!-- Registration Form -->
                        <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
                            <form method="post" action="/Account/Register">
                                <div class="mb-3 mt-3">
                                    <label for="registerEmail" class="form-label">Email:</label>
                                    <input type="email" class="form-control" id="registerEmail" name="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="registerPassword" class="form-label">Password:</label>
                                    <input type="password" class="form-control" id="registerPassword" name="password" required>
                                </div>
                                <div class="mb-3">
                                    <label for="confirmPassword" class="form-label">Confirm Password:</label>
                                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                </div>
                                <button type="submit" class="btn btn-success w-100">Register</button>
                            </form>
                        </div>
                    </div>
                </div>S
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
